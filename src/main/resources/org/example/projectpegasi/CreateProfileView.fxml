<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="400" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectpegasi.Application.CreateProfileViewController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Create Profile" />
      <VBox prefHeight="0.0" prefWidth="360.0">
         <children>
            <Label text="Username" />
            <TextField fx:id="usernameField" promptText="Enter desired username" />
         </children>
      </VBox>
      <VBox prefHeight="0.0" prefWidth="360.0">
         <children>
            <Label text="Password" />
            <TextField fx:id="passwordFIeld" promptText="Enter desired password" />
         </children>
      </VBox>

        <!-- Full Name -->
        <VBox>
            <Label text="Full Name" />
            <TextField fx:id="fullNameField" promptText="Enter full name" />
        </VBox>

        <!-- Job Title -->
        <VBox>
            <Label text="Job Title" />
            <TextField fx:id="jobTitleField" promptText="Enter job title" />
        </VBox>

        <!-- Job Function -->
        <VBox>
            <Label text="Job Function" />
            <ComboBox fx:id="jobFunctionComboBox" promptText="Select job function" />
        </VBox>

        <!-- Company -->
        <VBox>
            <Label text="Company" />
            <ComboBox fx:id="companyComboBox" promptText="Select company" />
        </VBox>

        <!-- Home Address -->
        <VBox>
            <Label text="Home Address" />
            <TextField fx:id="homeAddressField" promptText="Enter address" />
        </VBox>

        <!-- Min Salary -->
        <VBox>
            <Label text="Min Salary (before taxes)" />
            <ComboBox fx:id="minSalaryComboBox" promptText="Select salary" />
        </VBox>

        <!-- Distance Preference -->
        <VBox>
            <Label text="Distance Pref from Home" />
            <ComboBox fx:id="distancePrefComboBox" promptText="Select distance" />
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="saveButton" onAction="#onSaveClick" text="Save" />
            <Button fx:id="cancelButton" onAction="#onCancelClick" text="Cancel" />
        </HBox>
    </VBox>
</AnchorPane>
