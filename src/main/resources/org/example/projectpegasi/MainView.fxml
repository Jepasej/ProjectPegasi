<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="Application.MainViewController">

    <VBox alignment="CENTER" layoutX="50" layoutY="30" prefWidth="300" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="30">

        <!-- Titel -->
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome to JobSwap" />

        <!-- Brugernavn + adgangskode sektion -->
        <VBox alignment="CENTER_LEFT" spacing="10">
            <Label text="User name" />
            <TextField fx:id="usernameField" promptText="Enter your username" />

            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" />
        </VBox>

        <!-- Knapper -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="createProfileButton" text="Create Profile" />
            <Button fx:id="loginButton" text="Login" />
        </HBox>
    </VBox>
</AnchorPane>
